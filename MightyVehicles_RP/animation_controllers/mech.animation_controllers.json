{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.mech": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "animations": ["idle"],
                    "transitions": [
                        {"walking": "query.modified_move_speed > 0.1"},
                        {"attacking": "query.is_delayed_attacking"}
                    ]
                },
                "walking": {
                    "animations": ["walk"],
                    "transitions": [
                        {"idle": "query.modified_move_speed <= 0.1"},
                        {"attacking": "query.is_delayed_attacking"}
                    ]
                },
                "attacking": {
                    "animations": ["attack"],
                    "transitions": [
                        {"idle": "!query.is_delayed_attacking && query.modified_move_speed <= 0.1"},
                        {"walking": "!query.is_delayed_attacking && query.modified_move_speed > 0.1"}
                    ]
                }
            }
        }
    }
}
